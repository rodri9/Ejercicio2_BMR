<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_details"
    tools:context=".fragments.CharacterDetailsFragment">

    <ProgressBar
        android:id="@+id/pbDetailsLoading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_CharacterDetails"
            android:layout_width="234dp"
            android:layout_height="234dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/no_image_available"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/imagen_de_un_personaje"/>

        <TextView
            android:id="@+id/tv_CharacterDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            tools:text="@string/nombre_personaje"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/peliculas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_filmsDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32sp"
            tools:text="@string/detalles_peliculas"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</FrameLayout>